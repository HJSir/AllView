<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F3"
    tools:context="com.example.jian.allview.mine.ui.activity.OrderDetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@mipmap/back_icon2"
            android:id="@+id/back_icon2"
            android:background="#ADE9F9"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:text="订单详情"
            android:textSize="20dp"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:id="@+id/top_title_orderdetail"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:background="#ADE9F9"
            android:layout_height="match_parent"/>


    </LinearLayout>


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110dp"
android:orientation="horizontal"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_type"
            android:layout_margin="5dp"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tv_order_typename"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center|left"
                android:text="产品名称"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:orientation="horizontal">
             <ImageView

                 android:layout_margin="7dp"
                 android:background="@mipmap/price"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="3"/>
             <TextView
                 android:id="@+id/tv_order_typeprice"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:text="30"
                 android:gravity="left|center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"/>

         </LinearLayout>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="订单信息"
            />
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="时间："
            />
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="数量："
            />



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView

            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="商家信息"
            />
        <TextView
            android:id="@+id/tv_order_shopname"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="店名："
            />
        <TextView
            android:id="@+id/tv_order_shopadres"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="地址："
            />
        <TextView
            android:id="@+id/tv_order_shoptel"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:text="电话："
            />


    </LinearLayout>


</LinearLayout>
