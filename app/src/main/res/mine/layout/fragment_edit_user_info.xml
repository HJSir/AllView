<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#ffefebe7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="60.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip" >

        <com.example.jian.allview.utils.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:paddingLeft="4.0dip"
            android:orientation="horizontal">
            <TextView
                app:layout_widthPercent="70%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="信息编辑"
                android:textColor="#ff888888"
                android:textSize="16.0sp"
                android:layout_gravity="left|center"/>

            <Button
                android:id="@+id/mine_userinfo_save"
                app:layout_widthPercent="30%"
                android:text="保存"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                />

        </com.example.jian.allview.utils.PercentLinearLayout>


        <com.example.jian.allview.utils.PercentLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.jian.allview.utils.PercentLinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                app:layout_heightPercent="15%"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    app:layout_widthPercent="85%"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="17.0dip"
                    android:text="头像"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_image_edit"
                    app:layout_widthPercent="15%"
                    app:layout_aspectRatio="100%"

                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:actualImageScaleType="centerCrop"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="#fff3cf44"
                    app:roundingBorderWidth="2dp"/>


            </com.example.jian.allview.utils.PercentLinearLayout>








            <com.example.jian.allview.utils.PercentLinearLayout
                app:layout_heightPercent="10%"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    app:layout_widthPercent="80%"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="17.0dip"
                    android:text="姓名"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />
                <EditText
                    android:layout_width="match_parent"
