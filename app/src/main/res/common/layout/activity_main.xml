<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <LinearLayout
android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView

            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableTop="@drawable/tab_menu_home"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_deal_text"
            android:text="首页"/>

        <TextView
            android:id="@+id/tab_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawablePadding="0dp"
            android:drawableTop="@drawable/tab_menu_news"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_deal_text"
            android:text="新闻"/>

        <TextView
            android:id="@+id/tab_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:drawableTop="@drawable/tab_menu_find"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_deal_text"
            android:text="发现"/>

        <TextView
            android:id="@+id/tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:drawableTop="@drawable/tab_menu_mine"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_deal_text"
            android:text="我的"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
      >


    </FrameLayout>

</RelativeLayout>
